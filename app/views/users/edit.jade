extends ../shared/template
block content
  h2 Edit Profile
  .row
    .col-xs-4.col-xs-offset-4
      form(role='form', method='post', action='/profile')
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email', value=user.email, autofocus=true)
        .form-group
          label(for='name') Name
          input.form-control#name(type='text', name='name', value=user.name)
        .form-group
          label(for='phone') Phone
          input.form-control#phone(type='tel', name='phone', value=user.phone)
        .form-group
          label(for='photo') Photo
          input.form-control#photo(type='text', name='photo', value=user.photo)

        button.btn.btn-success(type='submit') Submit
