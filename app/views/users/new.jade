extends ../shared/template
block content
  h2 Register
  .row
    .col-xs-6
      form(role='form', method='post', action='/register')
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email', autofocus=true)
        .form-group
          label(for='name') Name
          input.form-control#name(type='text', name='name')
        .form-group
          label(for='photo') Photo
          input.form-control#photo(type='url', name='photo')
        .form-group
          label(for='password') Password
          input.form-control#password(type='password', name='password')
        button.btn.btn-primary(type='submit') Submit
    .col-xs-6

block scripts

